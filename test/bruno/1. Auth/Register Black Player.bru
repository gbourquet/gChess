meta {
  name: Register Black Player
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/auth/register
  body: json
  auth: none
}

body:json {
  {
    "username": "bob",
    "email": "bob@example.com",
    "password": "password456"
  }
}

tests {
  test("Status is 201", function() {
    expect(res.status).to.equal(201);
  });

  test("Response has user ID", function() {
    expect(res.body.id).to.be.a('string');
    bru.setEnvVar("blackPlayerId", res.body.id);
  });

  test("Username is correct", function() {
    expect(res.body.username).to.equal("bob");
  });
}
