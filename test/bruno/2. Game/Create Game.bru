meta {
  name: Create Game
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/games
  body: json
  auth: bearer
}

auth:bearer {
  token: {{whiteToken}}
}

body:json {
  {
    "whitePlayerId": "{{whitePlayerId}}",
    "blackPlayerId": "{{blackPlayerId}}"
  }
}

tests {
  test("Status is 201", function() {
    expect(res.status).to.equal(201);
  });

  test("Game created with correct players", function() {
    expect(res.body.whitePlayer).to.equal(bru.getEnvVar("whitePlayerId"));
    expect(res.body.blackPlayer).to.equal(bru.getEnvVar("blackPlayerId"));
    bru.setEnvVar("gameId", res.body.id);
  });

  test("Game status is IN_PROGRESS", function() {
    expect(res.body.status).to.equal("IN_PROGRESS");
  });

  test("Current side is WHITE", function() {
    expect(res.body.currentSide).to.equal("WHITE");
  });
}
