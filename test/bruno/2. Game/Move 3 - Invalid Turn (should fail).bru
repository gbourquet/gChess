meta {
  name: Move 3 - Invalid Turn (should fail)
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/api/games/{{gameId}}/moves
  body: json
  auth: bearer
}

auth:bearer {
  token: {{blackToken}}
}

body:json {
  {
    "from": "g8",
    "to": "f6"
  }
}

tests {
  test("Status is 400 (Bad Request)", function() {
    expect(res.status).to.equal(400);
  });

  test("Error message mentions turn", function() {
    const body = res.body;
    const bodyStr = JSON.stringify(body).toLowerCase();
    expect(bodyStr).to.include("turn");
  });
}
